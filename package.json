{
	"private": true,
	"name": "example",
	"description": "Webpack 2 + ES Modules + Flow",
	"engines": {
		"node": ">=6.0.0"
	},
	"nyc": {
		"all": true,
		"sourceMap": false,
		"instrument": false,
		"include": [
			"src/**/*.js"
		],
		"exclude": [
			"**/*.tests.js"
		],
		"reporter": [
			"html",
			"text"
		],
		"report-dir": "./coverage"
	},
	"scripts": {
		"start": "webpack-dev-server --port 8000 --content-base www/ --env.debug",
		"build": "webpack --env.minify --env.production || true",
		"lint": "eslint src --ext .js || true",
		"typecheck": "flow check src || true",
		"test": "mocha --compilers js:./helpers/mocha-babel-compiler.js ./src/**/*.tests.js || true",
		"coverage": "nyc mocha --compilers js:./helpers/nyc-babel-compiler.js ./src/**/*.tests.js || true"
	},
	"devDependencies": {
		"babel-eslint": "^6.1.2",
		"babel-loader": "^6.2.5",
		"babel-plugin-istanbul": "^2.0.1",
		"babel-plugin-transform-flow-strip-types": "^6.14.0",
		"babel-plugin-transform-runtime": "^6.12.0",
		"babel-preset-es2015": "^6.14.0",
		"babel-register": "^6.14.0",
		"css-loader": "^0.25.0",
		"eslint": "^3.5.0",
		"eslint-plugin-flowtype": "^2.18.1",
		"extract-text-webpack-plugin": "^2.0.0-beta.4",
		"file-loader": "^0.9.0",
		"flow-bin": "^0.32.0",
		"html-webpack-plugin": "^2.22.0",
		"mocha": "^3.0.2",
		"nyc": "^8.1.0",
		"postcss-cssnext": "^2.8.0",
		"postcss-loader": "^0.13.0",
		"style-loader": "^0.13.1",
		"url-loader": "^0.5.7",
		"webpack": "^2.1.0-beta.22",
		"webpack-dev-server": "^2.1.0-beta.4"
	}
}